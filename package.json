{
  "name": "@nodeplusplus/xregex-template",
  "version": "1.0.7",
  "description": "Provide template functions of XRegex Platform",
  "main": "lib/index.js",
  "scripts": {
    "test": "jest",
    "test:interactions": "jest __tests__/interactions",
    "test:e2e": "jest __tests__/e2e",
    "test:coverage": "jest --coverage __tests__",
    "test:coverage:ci": "jest --reporters=default --reporters=jest-junit --coverage -ci __tests__",
    "build": "rm -rf lib && tsc -p tsconfig.build.json",
    "prepack": "rm -rf *.tgz && npm run build",
    "validate": "tsc -p tsconfig.build.json --noEmit",
    "lint": "tslint -p tsconfig.build.json",
    "lint:fix": "npm run lint --fix",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "files": [
    "lib"
  ],
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git@github.com:nodeplusplus/xregex-template.git"
  },
  "keywords": [
    "xregex",
    "template"
  ],
  "author": "Tuan Nguyen <tuan.nguyen@nodeplusplus.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/faker": "^4.1.11",
    "@types/jest": "^25.1.4",
    "@types/node": "^12.12.31",
    "coveralls": "^3.0.11",
    "faker": "^4.1.0",
    "husky": "^4.2.3",
    "jest": "^25.2.0",
    "jest-junit": "^10.0.0",
    "lint-staged": "^10.0.10",
    "prettier": "^2.0.2",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.8.1",
    "tslint": "^6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@nodeplusplus/xregex-helpers": "^1.0.4",
    "@nodeplusplus/xregex-logger": "^1.0.0",
    "@types/flat": "^5.0.1",
    "@types/joi": "^14.3.4",
    "@types/js-yaml": "^3.12.5",
    "flat": "^5.0.0",
    "handlebars": "^4.7.6",
    "joi": "^14.3.1",
    "js-yaml": "^3.14.0",
    "tslib": "^1.11.1",
    "utility-types": "^3.10.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,css,md}": "prettier --write"
  }
}
